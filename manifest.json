{
    "manifest_version": 3,
    "name": "Stay Focused - Pomodoro Timer",
    "description": "A comprehensive pomodoro timer extension with session control and notifications",
    "version": "1.0.0",
    "icons": {
        "16": "icons/timer-16.png",
        "32": "icons/timer-32.png",
        "48": "icons/timer-48.png",
        "128": "icons/timer-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/timer-16.png",
            "32": "icons/timer-32.png",
            "48": "icons/timer-48.png",
            "128": "icons/timer-128.png"
        }
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "background": {
        "service_worker": "service-worker.js"
    }
}